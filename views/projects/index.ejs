<section>
  <h1>Accueil des projets</h1>

<div class="projects">
  <button class="create-btn"><a class="create-link" href="/projects/create">⨠ Créer un projet</a></button>
  <% projects.forEach(project => { %>

    <div class="project">
     
      <h5>Nom</h5>
      <p> <%= project.name %> </p>
      <h5>Description</h5>
      <p> <%= project.description %> </p>

      <button class="create-btn"><a class="create-link" href="/userstories/create/:id">⨠ Créer une user story</a></button>

      <div class="project-btn">
        <a href="/projects/update/<%=project._id%>"><button>Modifier</button></a>
        <a href="/projects/delete/<%=project._id%>"><button>Supprimer</button></a>
      </div>

    </div>

  <% }); %>

</div>
</section>